{
  "name": "website-html-rewriter",
  "scripts": {
    "dev": "wrangler pages dev",
    "build": "esbuild src/server.ts --format=esm --outfile=dist/_worker.js --minify --bundle --loader:.wasm=copy --loader:.bin=copy",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && npm run build && cp -r public/* dist && wrangler pages deploy dist"
  },
  "dependencies": {
    "@cloudflare/pages-plugin-vercel-og": "^0.1.2",
    "@hono/valibot-validator": "^0.3.1",
    "@supabase/supabase-js": "^2.45.4",
    "@types/react": "^18.3.12",
    "hono": "^4.6.8",
    "react": "^18.3.1",
    "valibot": "^0.41.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "configs": "workspace:*",
    "esbuild": "0.24.0",
    "supabase-types": "workspace:*",
    "wrangler": "^3.83.0"
  }
}
